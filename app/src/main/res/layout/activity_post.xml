<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shazly.piazyapp.Activity.PostActivity"
    android:fitsSystemWindows="true"


    >

<android.support.design.internal.BottomNavigationItemView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomView"
    android:layout_alignParentBottom="true"
    android:fitsSystemWindows="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_weight="9.0"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimary"
        >

        <EditText
            android:id="@+id/commentField"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:hint="Write Comment..."
            android:fitsSystemWindows="true"

            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:src= "@drawable/plus"
            android:scaleType="fitCenter"
            android:id="@+id/addComment"
            android:visibility="visible"
            android:fitsSystemWindows="true"

            />
    </LinearLayout>


</android.support.design.internal.BottomNavigationItemView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:id="@+id/profilePicture"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="aasdsdasdasd"
            android:layout_margin="24dp"
            android:id="@+id/name"
            android:textColor="@color/colorPrimary"
            />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_below="@+id/profile"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        tools:text="aasdsdasdahvjhvjhvjhvjhvhvlvhlhlglhggllgliugliugliugliugilugliugliligilugligglglguligliugililgluluglgi
        vfyufyfuyfuyfuyfufyuyfufuyfuyfyufuf'
        yfuyfuyfyyufuyfufufyyufsd"
        android:id="@+id/content"
        />
    <ListView
        android:id="@+id/listOfComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:layout_below="@+id/content"
        android:listSelector="@android:color/transparent"
        android:layout_marginBottom="?attr/actionBarSize"

        />





</RelativeLayout>
